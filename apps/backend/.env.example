# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wisal
POSTGRES_USER=wisal
POSTGRES_PASSWORD=wisal_password

MONGODB_URI=mongodb://localhost:27017/wisal

REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# AWS/S3 Configuration (for video storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=wisal-videos

# Payment Gateway (Moyasar)
MOYASAR_API_KEY=your-moyasar-api-key
MOYASAR_SECRET_KEY=your-moyasar-secret-key

# Email Service (SendGrid/SES)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@wisal.sa

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+966xxxxxxxxx

# Shipping Integration (SMSA)
SMSA_API_KEY=your-smsa-api-key
SMSA_API_URL=https://api.smsa.com
